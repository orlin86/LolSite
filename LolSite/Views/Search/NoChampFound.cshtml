@model LolSite.Models.Summoner
@{
    ViewBag.Title = "Index";
}



<div class="container">
    <div class="well">
        <h2>No summoner exists with that name on the specified server!</h2>
        @using (Html.BeginForm("SearchResult", "Search", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.SummonerName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.SummonerName, new { @class = "form-control" })
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Server, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.Server, new SelectList(ViewBag.Servers, "Text", "Value"), new { @class = "form-control" })
                </div>
            </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <input type="submit" value="Search" class="btn btn-success" />
                    </div>
                </div>
        }
    </div>
</div>


